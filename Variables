  <button
  onclick="
  let time = new Date().getHours();

    if(time > 0 && time<= 12)
    {
      alert('good morning');
    }
    else if(time > 12 && time <=15)
    {
      alert('good afternoon');
    }
    else if(time > 15 && time <=19)
    {
      alert('good evening');
    }
    else{
      alert('good night');
    }
    ">
    welcome
  </button>
