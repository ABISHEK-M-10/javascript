<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dom</title>

  <style>
    .subscribeButton {
      padding-left: 10px;
      padding-right: 10px;
      padding-bottom: 6px;
      padding-top: 6px;
      border: none;
      border-radius: 20px;
      background-color: black;
      color: white;
      font-family: Arial;
    }
  </style>
</head>
<body>
  <input class="js-inputbox" placeholder="enter the cost" onkeydown="
    gettotal(event)">
  <button onclick="
  total()
  ">enter</button>

  <button class="subscribeButton" onclick="
  ontheclick()">
    subscribe
  </button>

  <p class="ans"></p>

  <script>
    function total() {
      const inputElement = document.querySelector('.js-inputbox');
      let cost = Number(inputElement.value);
      if(cost < 40)
      {
        cost += 10;
      }
  
    document.querySelector('.ans')
    .innerHTML= `${cost}`;

    inputElement.value = '';
    }

    function gettotal(event) {
      if(event.key === 'Enter')
      {
        total();
      }
    }

    function ontheclick() {
      const but = document.querySelector('.subscribeButton');
      
       let value = but.innerText;

       if(value === 'subscribe')
       {
        document.querySelector('.subscribeButton')
        .innerHTML = 'subscribed';
        but.classList.add('is-subscribed')
       }
       else{
        document.querySelector('.subscribeButton')
        .innerHTML = 'subscribe';
       }
    }
  </script>
</body>
</html>
